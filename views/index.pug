extends layout

block navbar
  nav.navbar.navbar-default
    .container-fluid
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#') [School Name] Schedule Compare
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right
          li
            a(href='/auth/google') Sign in with Google
block content
  .jumbotron.jumbotron-home
    .container
      each alert in messages
        .alert.alert-danger(role="alert")= alert
      h1 [School Name] Schedule Compare
      a.btn.btn-primary.signin-button(href="/auth/google/") Sign in with Google
      h3 You MUST sign in with your school account, not personal account!
      br
      br
      h4 Not affiliated with [School Name] High School. No harm intended.
  .container
    .col-md-6
      .glyphicon.glyphicon-road.big-icon
      h3 Glimpse into your future classes.
    .col-md-6
      .glyphicon.glyphicon-th-list.big-icon
      h3 Enter your schedule and compare it with others.
      h4=userCount+" users and counting"
